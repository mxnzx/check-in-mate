<mapper namespace="com.ssafy.enjoytrip.member.model.mapper.MemberMapper">

	<select id="login" parameterType="memberDto" resultType="memberDto">
		select user_name as username, user_id as userid , email_id as email
		from member
		where user_id = #{userid} and user_password = #{userpwd}
		 
	</select>
	
	<select id="userInfo" parameterType="string" resultType="memberDto">
		select user_name as username, user_id as userid, email_id as email, join_date as joindate
		from member
		where user_id = #{userid}
	</select>
	
	<select id="getRefreshToken" parameterType="string" resultType="string">
		select token
		from member
		where user_id = #{userid}
	</select>
	
	<update id="saveRefreshToken" parameterType="map">
		update member
		set token = #{token}
		where user_id = #{userid}
	</update>
	
	<update id="deleteRefreshToken" parameterType="map">
		update member
		set token = #{token, jdbcType=VARCHAR}
		where user_id = #{userid}
	</update>

